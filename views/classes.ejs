<%- include('partials/head') -%> <%- include('partials/navbar') -%>
<!-- CLASS VIEW -->

<div class="container content">

  <div class="class-view">

    <div class="class-view-header">

      <div class="class-view-title">

        <i class="fas fa-chalkboard"></i>

        <h2 class="section-header-space"><%= classData.className %></h2>

        <div class="badge badge-id">CLASS ID: <%= classData._id %></div>

      </div>

      <div class="add-remove">

        <a href="/index"><i class="fas fa-arrow-circle-left"></i></a>

      </div>

    </div>

    <div class="section scroll bg-grey class-view-students">

      <h4 class="section-header">

        <i class="fas fa-users"></i>

        <span class="section-header-space">Students</span>

        <div class="float-right add-remove">

          <i
            class="fas fa-plus"
            data-toggle="modal"
            data-target="#addstudent"
          ></i>

        </div>
         <%- include('partials/addstudents') -%>
      </h4>

      <hr />

      <ol>
         <% for( var i = 0; i < studentData.length; i++ ) { %>
        <li>

          <a class="student-link" href="/students/<%= studentData[i]._id %>">
             <%= studentData[i].lastName %>, <%= studentData[i].firstName %>
          </a>

          <a
            class="float-right delete-btn student-delete-btn student-link"
            href=""
            name="<%= studentData[i]._id %>"
          >

            <i class="fas fa-trash-alt"></i>

          </a>

        </li>
         <% } %>
      </ol>

    </div>

    <div class="section scroll bg-grey class-view-assignments">

      <h4 class="section-header">

        <i class="fas fa-clipboard-list"></i>

        <span class="section-header-space">Assignments</span>

        <div class="float-right add-remove" id="#addassignment">

          <i
            class="fas fa-plus"
            data-toggle="modal"
            data-target="#addassignment"
          ></i>

        </div>
         <%- include('partials/addassignment') -%>
      </h4>

      <hr />

      <ul>
         <% for( var i = 0; i < assignmentData.length; i++ ) { %>
        <li>

          <span class="student-link">
             <%= assignmentData[i].assignmentName %>
          </span>

          <a
            class="float-right assignment-delete-btn student-link"
            name="<%= assignmentData[i]._id %>"
            href="#"
          >

            <i class="fas fa-trash-alt"></i>

          </a>

        </li>
         <% } %>
      </ul>

    </div>

    <div class="section scroll bg-grey class-view-lessonplans">

      <h4 class="section-header">

        <i class="fas fa-folder-open"></i>

        <span class="section-header-space">Lesson Plans</span>

        <div class="float-right add-remove">

          <i
            class="fas fa-plus"
            data-toggle="modal"
            data-target="#lessonplan"
          ></i>

        </div>
         <%- include('partials/addlessonplan') -%>
      </h4>

      <hr />
       <% for( var i = 0; i < lessonplanData.length; i++ ) { %>
      <a href="/classes/lessonplan/<%= lessonplanData[i]._id %>">

        <div class="overview-item">

          <div class="overview-header">

            <h3 class="lesson-date">
               <%= lessonplanData[i].lessonplanName %>
            </h3>

            <span
              class="lessonplan-delete-btn student-link"
              name="<%= lessonplanData[i]._id %>"
            >

              <i class="fas fa-trash-alt"></i>

            </span>

          </div>

          <p><%= lessonplanData[i].notes %></p>

        </div>

      </a>
       <% } %>
    </div>

  </div>

</div>
 <%- include('partials/footer') -%>
