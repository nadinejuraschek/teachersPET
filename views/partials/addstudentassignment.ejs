<!-- MODAL: ADD STUDENT ASSIGNMENT -->
<div class="modal fade" id="addstudentassignment" tabindex="-1" role="dialog"
  aria-labelledby="addStudentAssignmentLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-grey">
      <div class="modal-header">
        <h5 class="modal-title" id="addstudentassignemnt">Add An Assignment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label class="input-title" for="totalpoints" class="col-form-label">Total Points:</label>
            <input type="text" class="form-control" id="totalpoints">
          </div>
          <div class="form-group">
            <div class="dropdown">
              <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                Select An Assignment:
              </button>
              <!--populate with dynamic data-->
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Book Report</a>
                <a class="dropdown-item" href="#">Essay</a>
                <a class="dropdown-item" href="#">Argument</a>
                <a class="dropdown-item" href="#">Short Story</a>
                <a class="dropdown-item" href="#">Outline</a>
                <a class="dropdown-item" href="#">Research Paper</a>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="input-title" for="studentassignmentmessagetext" class="col-form-label">Notes:</label>
            <textarea class="form-control" id="studentassignmentmessagetext"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn modal-btn" id="addstudentassignmentsubmit">Submit</button>
      </div>
    </div>
  </div>
</div>