                <% } %> -->
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="input-title" for="studentassignmentmessagetext" class="col-form-label">Notes:</label>
            <textarea class="form-control" id="studentassignmentmessagetext"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn modal-btn" id="addstudentassignmentsubmit">Submit</button>
      </div>
    </div>
  </div>
