<!-- MODAL: ADD STUDENT -->

<div
  class="modal fade"
  id="addstudent"
  tabindex="-1"
  role="dialog"
  aria-labelledby="addStudentLabel"
  aria-hidden="true"
>

  <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content">

      <div class="modal-header">

        <h5 class="modal-title" id="addstudent">Add A Student</h5>

        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >

          <span aria-hidden="true">&times;</span>

        </button>

      </div>

      <div class="modal-body">

        <form>

          <div class="form-group">

            <label class="input-title" for="classid" class="col-form-label">
               Class Id:
            </label>

            <input type="text" class="form-control" id="classid" />

          </div>

          <div class="form-group">

            <label class="input-title" for="firstname" class="col-form-label">
               Student First Name:
            </label>

            <input type="text" class="form-control" id="firstname" />

          </div>

          <div class="form-group">

            <label class="input-title" for="lastname" class="col-form-label">
               Student Last Name:
            </label>

            <input type="text" class="form-control" id="lastname" />

          </div>

          <div class=" form-group">

            <label class="input-title" for="email" class="col-form-label">
              Email:
            </label>

            <input type="text" class="form-control" id="email" />

          </div>

          <div class="form-group">

            <label class="input-title" for="address" class="col-form-label">
              Address:
            </label>

            <input type="text" class="form-control" id="address" />

          </div>

          <div class="form-group">

            <label class="input-title" for="contactname" class="col-form-label">
              Contact Name:
            </label>

            <input type="text" class="form-control" id="contactname" />

          </div>

          <div class="form-group">

            <label
              class="input-title"
              for="contactphone"
              class="col-form-label"
            >
              Contact Phone:
            </label>

            <input type="text" class="form-control" id="contactphone" />

          </div>

          <div class="form-group">

            <label
              class="input-title"
              for="studentmessagetext"
              class="col-form-label"
            >
              Notes:
            </label>

            <textarea class="form-control" id="studentmessagetext"></textarea>

          </div>

        </form>

      </div>

      <div class="modal-footer">

        <button type="button" class="btn modal-btn" id="addstudentsubmit">
          Submit
        </button>

      </div>

    </div>

  </div>

</div>
