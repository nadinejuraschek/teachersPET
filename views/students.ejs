<%- include('partials/head') -%> <%- include('partials/navbar') -%>
<!-- STUDENT VIEW -->

<div class="container content">

  <div class="students-view">

    <div class="students-view-header">

      <div class="students-view-title">

        <i class="fas fa-user-graduate"></i>

        <h2 class="section-header-space">
           <%= studentData.lastName %>, <%= studentData.firstName %>
        </h2>

        <span class="badge badge-id">CLASS ID: <%= studentData._id %></span>

      </div>

      <div class="float-right add-remove">

        <a href="/classes/<%= studentData.ClassId %>">

          <i class="fas fa-arrow-circle-left"></i>

        </a>

      </div>

    </div>

    <!-- CONTACT DETAILS -->

    <div class="students-view-contact section bg-grey">

      <h4 class="section-header">

        <i class="fas fa-address-book"></i>

        <span class="section-header-space">Contact</span>

      </h4>

      <hr />

      <div class="contact-details">

        <p>

          <a class="muted-link" href="mailto:<%= studentData.email %>">

            <i class="fas fa-at"></i>

            <span class="section-header-space"><%= studentData.email %></span>

          </a>

        </p>

        <p>

          <i class="fas fa-home"></i>

          <span class="section-header-space"><%= studentData.address %></span>

        </p>

        <p>

          <i class="fas fa-user-friends"></i>

          <span class="section-header-space">
             <%= studentData.contactName %>
          </span>

        </p>

        <p>

          <i class="fas fa-phone"></i>

          <span class="section-header-space">
             <%= studentData.contactPhone %>
          </span>

        </p>

      </div>

    </div>

    <!-- NOTES -->

    <div class="students-view-notes section scroll bg-grey">

      <h4 class="section-header">

        <i class="far fa-edit"></i>

        <span class="section-header-space">Notes</span>

        <div class="float-right add-remove">

          <i class="fas fa-plus" data-toggle="modal" data-target="#addnote"></i>

        </div>
         <%- include('partials/addnote') -%>
      </h4>

      <hr />

      <div class="overview-item">
         <%= studentData.notes %>
        <a class="float-right delete-btn student-link" href="#">

          <i class="fas fa-trash-alt"></i>

        </a>

      </div>

    </div>

    <!-- GRADE -->

    <div class="students-view-grade section section-height bg-grey">

      <h4 class="section-header">

        <i class="fas fa-graduation-cap"></i>

        <span class="section-header-space">Overall Grade</span>

      </h4>

      <hr />

      <p>math function to calculate grade</p>

    </div>

    <!-- ASSIGNMENTS -->

    <div
      class="students-view-assignments section section-height scroll bg-grey"
    >

      <h4 class="section-header">

        <i class="fas fa-clipboard-list"></i>

        <span class="section-header-space">Assignments</span>

        <div class="float-right add-remove">

          <i
            class="fas fa-plus"
            data-toggle="modal"
            data-target="#addstudentassignment"
          ></i>

        </div>
         <%- include('partials/addstudentassignment') -%>
      </h4>

      <hr />

    </div>

  </div>
   <%- include('partials/footer') -%>
</div>

