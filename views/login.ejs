<%- include('partials/head') -%>
<!-- LOGIN -->

<div class="container content content-center mt-5">

  <h1 class="logo-text-lg text-center">teachersPET</h1>

  <form class="form-signin">

    <h2 class="signin-header">Log In</h2>

    <label for="inputEmail" class="sr-only">E-Mail</label>

    <input
      type="email"
      id="inputEmail"
      class="form-control"
      placeholder="E-Mail"
      required=""
      autofocus=""
    />

    <label for="inputPassword" class="sr-only">Password</label>

    <input
      type="password"
      id="inputPassword"
      class="form-control"
      placeholder="Password"
      required=""
    />

    <button
      id="login-btn"
      class="btn btn-lg btn-primary btn-block"
      type="submit"
    >
       Log In
    </button>

    <p class="signup-link">
       Don't have an account, yet?
      <a class="signup-link-btn" href="/signup">Sign Up</a>

    </p>

    <p class="signup-link">
       Testing?
      <a class="signup-link-btn" id="login-guest-btn">Use a Guest Account</a>

    </p>

  </form>

</div>
 <%- include('partials/footer') -%>
